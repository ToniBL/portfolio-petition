<div id="background">
<section id="register">


<h1>Please Log in</h1>

<form id="form" method='POST' >
  <label for='email'></label>
  <input class="petition--input" type='email' name='email' placeholder='Email Address' autocomplete='off'>
  
  <label for='password'></label>
  <input class="petition--input"type='password' name='password' placeholder='Password' autocomplete='off'>

  <input type="hidden" name="_csrf" value="{{csrfToken}}">
  
  <button class="petition--signup"> login </button>
  </form>

    {{#if errInLogin}} <p>Whoops! Something went wrong, please try again</p> {{/if}}
    </section>
